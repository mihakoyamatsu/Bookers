<% if flash[:notice] %>
  <p><%= flash[:notice] %></p>
<% end %>


<h1>Books</h1>

<table>
<thead>
<tr>
  <th>Title</th><th>Body</th>
</tr>
</thead>

<tbody>
<% @books.each do |book| %>
<tr>
<td><%= book.title %></td>
<td><%= book.body %></td>
<td>
<%= link_to "Show",book_path(book.id) %>
<%= link_to "Edit" ,edit_book_path(book.id) %>
<%= link_to "Destroy" ,book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %>
</td>
</tr>
<% end %>
</tbody>
</table>

<h1>New book</h1>
<!-- form_for部分 -->
<%= form_for(@book,url: '/books') do |f| %>
  <% if @book.errors.any? %>
   <div id="error_explanation" class="alert-error">
   	 <h4><%= @book.errors.count %>errors prohibited this book from being saved:</h4>
     <ul>
       <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
       <% end %>
     </ul>
   </div>
  <% end %>

  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Body</h4>
  <%= f.text_area :body %>
  <br><%= f.submit 'Create Book' %></br>


<% end %>







